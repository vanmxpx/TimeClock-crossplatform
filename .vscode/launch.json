    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to android on emulator",
            "type": "cordova",
            "request": "attach",
            "platform": "android",
            "target": "emulator",
            "cwd": "${workspaceFolder}",
            
            // "sourceMapPathOverrides": {
            //     "/source/*": "${workspaceFolder}/*"
            // }
        },
        {
            "name": "Run android on emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "emulator",
            "sourceMaps": true,
            "port": 9222,
            "cwd": "${workspaceFolder}",
            "ionicLiveReload": true,
            
        },
        {
            "name": "Simulate android in browser",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "chrome",


            "simulatePort": 8000,
            "livereload": true,
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8100",
            "webRoot": "${workspaceFolder}"
        }
    ]
}